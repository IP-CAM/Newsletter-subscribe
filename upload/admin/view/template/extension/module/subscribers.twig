{{ header }}{{ column_left }} 
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-subscribers" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
				<h1>{{ heading_title }}</h1>
				<ul class="breadcrumb">
					{% for breadcrumb in breadcrumbs %} 
					<li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
					{% endfor %} 
				</ul>
			</div>
		</div>
		<div class="container-fluid">
			{% if (error_warning) %} 
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
			{% endif %} 
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
				</div>
				<div class="panel-body">
					<form action="{{ action }}" method="POST" enctype="multipart/form-data" id="form-subscribers" class="form-horizontal">
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
							<div class="col-sm-10">
								<select name="module_subscribers_status" id="input-status" class="form-control">
									{% if (module_subscribers_status) %} 
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
									{% else %} 
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
									{% endif %} 
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-module_subscribers_agree"><span data-toggle="tooltip" title="{{ help_affiliate }}">Тест</span></label>
							<div class="col-sm-10">
								<select name="module_subscribers_agree" id="input-module_subscribers_agree" class="form-control">
								<option value="0">{{ text_none }}</option>
								{% for information in informations %}
								{% if information.information_id == module_subscribers_agree %}
									<option value="{{ information.information_id }}" selected="selected">{{ information.title }}</option>
								{% else %}
									<option value="{{ information.information_id }}">{{ information.title }}</option>
								{% endif %}
								{% endfor %}
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-module_subscribers_customer_group"><span data-toggle="tooltip" title="{{ help_affiliate }}">Тест</span></label>
							<div class="col-sm-10">
								<select name="module_subscribers_customer_group" id="input-module_subscribers_customer_group" class="form-control">
								<option value="0">{{ text_none }}</option>
								{% for customer_group in customer_groups %}
								{% if customer_group.customer_group_id == module_subscribers_customer_group %}
									<option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
								{% else %}
									<option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
								{% endif %}
								{% endfor %}
								</select>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div style="text-align: center;">{{ text_autor }}</div>
		</div>
	</div>
	{{ footer }} 